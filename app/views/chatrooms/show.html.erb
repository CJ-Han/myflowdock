<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @chatroom.name %>
</p>

<%= link_to 'Edit', edit_chatroom_path(@chatroom) %> |
<%= link_to 'Back', chatrooms_path %>

<div id="chatroom">
  <div data-behavior='messages' data-chatroom-id='<%= @chatroom.id %>'>
      <% @messages.each do |message| %>
        <% if message.head == true %>
          <%= link_to '# ', chatroom_post_path(@chatroom.id, message.post.id)%>
        <% else %>
          <%= link_to '- ', chatroom_post_path(@chatroom.id, message.post.id)%>
        <% end %>
        <%= message.user.username%>:
        <%= message.body %><br>
    <% end %>
  </div>
</div>

<%= form_for [@chatroom, Post.new] ,remote: true do |form| %>
  <div class="form-group row">
    <%= form.text_area :body, rows: 2, :class => 'input form-control col-xl-10',:placeholder => "有話快說！！！", autofocus: true %>
  </div>
<% end %>
