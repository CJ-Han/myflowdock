<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @chatroom.name %>
</p>

<%= link_to 'Edit', edit_chatroom_path(@chatroom) %> |
<%= link_to 'Back', chatrooms_path %>

  <div data-behavior='messages' data-chatroom-id='<%= @chatroom.id %>'>
    <% @posts.each do |post|%>
      <%= link_to '#', chatroom_post_path(@chatroom.id, post.id)%>
      <% post.messages.each do |message| %>
        <%= message.user.username%>:
        <%= message.body %><br>
      <% end %>
    <% end %>
  </div>

  <%= form_for [@chatroom, Message.new] do |form| %>
    <div class="form-group row">
      <%= form.text_area :body, rows: 2, :class => 'input form-control col-xl-10',:placeholder => "有話快說！！！", autofocus: true %>
    </div>
  <% end %>
