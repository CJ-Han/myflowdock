<p id="notice"><%= notice %></p>
<div id="chatroom">
  <h3><%= @chatroom.name %></h3>
  <%= link_to 'Edit', edit_chatroom_path(@chatroom) %> |
  <%= link_to 'Back', chatrooms_path %>
  <div data-behavior='messages' data-chatroom-id='<%= @chatroom.id %>' id='message-box'>
    <% @messages.each do |message| %>
      <%= render message %>
    <% end %>
  </div>
</div>
<div class="form">
  <%= form_for [@chatroom, Post.new] ,remote: true, authenticity_token: true do |form| %>
    <div class="form-group row">
      <%= form.text_area :body, rows: 3, :class => 'input form-control col-xl-10',:placeholder => "有話快說！！！", autofocus: true %>
    </div>
  <% end %>
</div>