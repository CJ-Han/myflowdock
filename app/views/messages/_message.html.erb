<div class="">
  <div class="icon d-flex align-items-center">
    <% if message.id == message.parent_id %>
      <%= link_to '<i class="fa fa-comment-o fa-lg text-primary" aria-hidden="true"></i>'.html_safe, chatroom_message_path(message.chatroom_id, message.id)%>
    <% else %>
      <%= link_to '<i class="fa fa-share fa-lg text-secondary" aria-hidden="true"></i>
'.html_safe , chatroom_message_path(message.chatroom_id, message.parent.id)%>
    <% end %>
    <strong style="font-weight: 700;">
      <%= message.user.username%>
    </strong>
    <p class="ml-auto pr-5 mb-0 timestamp">
    <%=  message.created_at.strftime("%Y-%m-%d-%H:%M")%>
    </p>
  </div>

  <div class="ml-5 pl-2">
    <%= raw(markdown(message.body)) %>
  </div>
</div>
