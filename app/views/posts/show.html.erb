<p id="notice"><%= notice %></p>
<div id="chatroom">
  <h3><%= @chatroom.name %></h3>
  <%= link_to 'Edit', edit_chatroom_path(@chatroom) %> |
  <%= link_to 'Back', chatroom_path(@chatroom) %>
  <div data-behavior='messages' data-chatroom-id='<%= @chatroom.id %>' id='messagebox'>
    <% @messages.each do |message| %>
      <%= render message %>
    <% end %>
  </div>
</div>
<%= form_for [@chatroom, @post, Message.new],remote: true, authenticity_token: true do |form| %>
  <div class="form-group row">
    <%= form.text_area :body, rows: 2, :class => 'input form-control col-xl-10',:placeholder => "有話快說！！！", autofocus: true %>
  </div>
<% end %>